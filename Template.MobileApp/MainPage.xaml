<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:s="http://smart/maui"
             xmlns:local="clr-namespace:Template.MobileApp"
             xmlns:shell="clr-namespace:Template.MobileApp.Shell"
             xmlns:behaviors="clr-namespace:Template.MobileApp.Behaviors"
             xmlns:markup="clr-namespace:Template.MobileApp.Markup"
             xmlns:views="clr-namespace:Template.MobileApp.Views"
             x:Class="Template.MobileApp.MainPage"
             x:DataType="{x:Type local:MainPageViewModel}"
             s:BindingContextResolver.Type="{x:Type local:MainPageViewModel}"
             IsEnabled="True"
             IsBusy="False"
             shell:ShellProperty.BusyView="{Binding BusyView}"
             shell:ShellProperty.BusyVisible="{Binding BusyState.IsBusy}">

    <ContentPage.Behaviors>
        <s:AppLifecycleBehavior />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="*,Auto,Auto">

        <!-- TODO style -->
        <Button Grid.RowSpan="3"
                WidthRequest="72" HeightRequest="72"
                FontSize="10"
                TextColor="White" BackgroundColor="#f44336"
                Text="支払い"
                ContentLayout="Top, 0" CornerRadius="36" HorizontalOptions="Center" ImageSource="qr_code.png"
                TranslationY="-12" VerticalOptions="End" ZIndex="100" />

        <BlazorWebView Grid.Row="0"
                       HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent ComponentType="{x:Type views:Routes}"
                               Selector="#app" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>

        <BoxView Grid.Row="1"
                 HeightRequest="0.5"
                 Color="#bdbdbd" />

        <Grid Grid.Row="2"
              ColumnDefinitions="*,*,72,*,*"
              BackgroundColor="White">
            <Button Grid.Column="0"
                    Command="{Binding PageCommand}"
                    CommandParameter="{x:Static views:SelectedPage.Home}"
                    behaviors:ButtonOption.DisableRippleEffect="True"
                    FontSize="10"
                    TextColor="{Binding Selected, Converter={markup:SelectedToColor Page=Home, Selected=#f44336, Default=#9e9e9e}}"
                    BackgroundColor="White"
                    Text="ホーム"
                    ContentLayout="Top, 0" CornerRadius="0"
                    ImageSource="{Binding Selected, Converter={markup:SelectedToImageSource Page=Home, Selected=home_selected.png, Default=home.png}}" />
            <Button Grid.Column="1"
                    Command="{Binding PageCommand}"
                    CommandParameter="{x:Static views:SelectedPage.Search}"
                    behaviors:ButtonOption.DisableRippleEffect="True"
                    FontSize="10"
                    TextColor="{Binding Selected, Converter={markup:SelectedToColor Page=Search, Selected=#f44336, Default=#9e9e9e}}"
                    BackgroundColor="White"
                    Text="検索"
                    ContentLayout="Top, 0" CornerRadius="0"
                    ImageSource="{Binding Selected, Converter={markup:SelectedToImageSource Page=Search, Selected=search_selected.png, Default=search.png}}" />
            <Button Grid.Column="3"
                    Command="{Binding PageCommand}"
                    CommandParameter="{x:Static views:SelectedPage.Notifications}"
                    behaviors:ButtonOption.DisableRippleEffect="True"
                    FontSize="10"
                    TextColor="{Binding Selected, Converter={markup:SelectedToColor Page=Notifications, Selected=#f44336, Default=#9e9e9e}}"
                    BackgroundColor="White"
                    Text="お知らせ"
                    ContentLayout="Top, 0" CornerRadius="0"
                    ImageSource="{Binding Selected, Converter={markup:SelectedToImageSource Page=Notifications, Selected=notifications_selected.png, Default=notifications.png}}" />
            <Button Grid.Column="4"
                    Command="{Binding PageCommand}"
                    CommandParameter="{x:Static views:SelectedPage.Account}"
                    behaviors:ButtonOption.DisableRippleEffect="True"
                    FontSize="10"
                    TextColor="{Binding Selected, Converter={markup:SelectedToColor Page=Account, Selected=#f44336, Default=#9e9e9e}}"
                    BackgroundColor="White"
                    Text="アカウント"
                    ContentLayout="Top, 0" CornerRadius="0"
                    ImageSource="{Binding Selected, Converter={markup:SelectedToImageSource Page=Account, Selected=account_selected.png, Default=account.png}}" />
        </Grid>

    </Grid>

</ContentPage>
